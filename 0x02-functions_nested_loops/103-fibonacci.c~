#include <stdio.h>

/**
 * main - prints the sum of all even fibonacci nums
 *
 * Return: Always 0 (Success)
 */
int main(void)
{
	long int i, j, k, next, sum = 0;

	j = 1;
	k = 2;

	for (i = 1; i < 50; i++)
	{
		if ((next <= 4000000) && (next % 2 == 0))
		{
			sum += next;
		}
		next = j + k;
		j = k;
		k = next;
	}
	return (0);
}
